@model ShoppinMVC6.Models.tbl_product

@{
    ViewBag.Title = "AddToCart";
}



@using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
{

    <div class="row">
        @Html.AntiForgeryToken()

        <div class="col-lg-4 col-md-4">
            <img class="img-thumbnail" style="height:370px; width:300px" src="@Url.Content(Model.pro_imge)" />

        </div>
        <div class="col-lg-4 col-md-4">
            <h1>PRODUCT NAME :@Model.pro_desc</h1>
            <h4> DRESS STYLE GIRLS</h4>
            <h2>PRICE :@Model.pro_price $</h2>
            <input type="number" name="qty" value="1" min="1" max="100" />
            <input type="submit" value="SUBMIT" class="btn btn-default" />

        </div>
    </div>

}


